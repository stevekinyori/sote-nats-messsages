{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "json-web-token": "eyJraWQiOvxxxxxxxxxxxxxxxx",
            "message-id": "51ad84d4-XXXXXXX-6b2ce5e8",
            "role-list": [
                "ROLE_NAME1",
                "ROLE_NAME2"
            ],
            "client-company-id": 1,
            "text-payload": "TEST MESSAGE - This is the Plain Text body",
            "html-payload":  "<!DOCTYPE html>\n<html>some-html-message</html>",
            "comm-channel": "EMAIL"
        }
    ],
    "required": [
        "json-web-token",
        "message-id",
        "role-list",
        "client-company-id",
        "text-payload",
        "html-payload"
    ],
    "optional": [
     "comm-channel"
    ],
    "properties": {
        "json-web-token": {
            "$id": "#/properties/json-web-token",
            "type": "string",
            "title": "The json-web-token schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "eyJraWQiOvxxxxxxxxxxxxxxxx"
            ]
        },
        "message-id": {
            "$id": "#/properties/message-id",
            "type": "string",
            "title": "The message-id schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "51ad84d4-XXXXXXX-6b2ce5e8"
            ]
        },
        "role-list": {
            "$id": "#/properties/role-list",
            "type": "array",
            "title": "The role-list schema",
            "description": "An explanation about the purpose of this instance.",
            "default": [],
            "examples": [
                [
                    "ROLE_NAME1",
                    "ROLE_NAME2"
                ]
            ],
            "additionalItems": true,
            "items": {
                "$id": "#/properties/role-list/items",
                "anyOf": [
                    {
                        "$id": "#/properties/role-list/items/anyOf/0",
                        "type": "string",
                        "title": "The first anyOf schema",
                        "description": "An explanation about the purpose of this instance.",
                        "default": "",
                        "examples": [
                            "ROLE_NAME1",
                            "ROLE_NAME2"
                        ]
                    }
                ]
            }
        },
        "client-company-id": {
            "$id": "#/properties/client-company-id",
            "type": "integer",
            "title": "The client-company-id schema",
            "description": "An explanation about the purpose of this instance.",
            "default": 0,
            "examples": [
                1
            ]
        },
        "text-payload": {
            "$id": "#/properties/text-payload",
            "type": "string",
            "title": "The Text Payload",
            "description": "The text payload for the message.",
            "default": "",
            "examples": [
                "TEST MESSAGE - This is the Plain Text body"
            ]
        },
        "html-payload": {
            "$id": "#/properties/html-payload",
            "type": "string",
            "title": "The Html Payload",
            "description": "The Html Payload for the message.",
            "default": "",
            "examples": [
                "<!DOCTYPE html>\n<html>some-html-message</html>"
            ]
        },
        "comm-channel": {
            "$id": "#/properties/comm-channel",
            "type": "string",
            "title": "The Communication Channel",
            "description": "The communication method that will be use to send.",
            "default": "EMAIL",
            "examples": [
                "EMAIL",
                "PUSH_NOTFICIATION"
            ]
        }
    },
    "additionalProperties": true
}