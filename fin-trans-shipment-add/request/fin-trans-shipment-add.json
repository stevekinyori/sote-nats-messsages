{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Financial Transaction Shipment Add",
	"description": "The message creates a financial transaction for a shipment",
	"examples": [
		{
			"json-web-token": "eyJraWQiOvxxxxxxxxxxxxxxxx",
			"message-id": "1a8eb33e-xxx-0242ac130003",
			"aws-user-name": "a8eb33e-xxx-0242ac130003",
			"organizations-id": 10003,
			"role-list": [
				"ROLE_NAME1",
				"ROLE_NAME2"
			],
			"client-company-id": 100,
			"shipments-id": 10002,
			"amount": 102.90,
			"currency": "USD",
			"fintrans-type": "F147",
			"cost-is-unexpected": true,
			"bill-of-lading": "1",
			"memo": "This is a memo"
		}
	],
	"type": "object",
	"required": [
		"json-web-token",
		"message-id",
		"organizations-id",
		"role-list",
		"aws-user-name",
		"client-company-id",
		"shipments-id",
		"amount",
		"currency",
		"fintrans-type"
	],
	"optional": [
		"cost-is-unexpected",
		"bill-of-lading",
		"memo"
	],
	"properties": {
		"request-header": {
			"$ref": "https://gitlab.com/soteapps/messages/-/raw/master/schema-definitions-v1.json#/definitions/request-header"
		},
		"client-company-id": {
			"$id": "#/properties/client-company-id",
			"type": "integer",
			"title": "The client-company-id schema"
		},
		"shipments-id": {
			"$id": "#/properties/shipments-id",
			"type": "integer",
			"title": "The system id assigned to the shipment"
		},
		"amount": {
			"$id": "#/properties/amount",
			"type": "number",
			"title": "The value of the transaction"
		},
		"currency": {
			"$id": "#/properties/currency",
			"type": "string",
			"title": "Monetary system being used for the transaction",
			"enum": [
				"USD",
				"KSH"
			]
		},
		"fintrans-type": {
			"$id": "#/properties/fintrans-type",
			"type": "string",
			"title": "The type of debit or credit transaction.",
			"enum": [
				"AGENCY_FEES",
				"CONTAINER_DEPOSIT",
				"CONTAINER_REPAIRS",
				"CUSTOMS_TAXES",
				"DEMURRAGE_CHARGES",
				"DOCUMENT_PROCESSING_FEES",
				"F147",
				"FEES_FOR_BOL",
				"FORWARDERS_CHARGES",
				"TRANSPORT_CHARGES",
				"HANDING_OVER_FEES",
				"IDF_FEES",
				"OTHER_CHARGES",
				"PARKING_FEES",
				"PORT_CHARGES",
				"SHIPPING_LINE_CHARGES",
				"STORAGE_CHARGES"
			]
		},
		"cost-is-unexpected": {
			"$id": "#/properties/cost-is-unexpected",
			"type": "boolean",
			"title": "TRUE or FALSE field to show if the cost was unexpected or not. DEFAULT is FALSE",
			"default": false
		},
		"bill-of-lading": {
			"$id": "#/properties/bill-of-lading",
			"type": "string",
			"title": "The customer supplied key",
			"default": false
		},
		"memo": {
			"$id": "#/properties/memo",
			"type": "string",
			"title": "Very short note for the transaction"
		}
	},
	"additionalProperties": true
}