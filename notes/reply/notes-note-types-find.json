{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "message-id": "test",
            "message": {
                "exists": true
            }
        }
    ],
    "required": [
        "message-id",
        "message"
    ],
    "properties": {
        "message-id": {
            "$id": "#/properties/message-id",
            "type": "string",
            "title": "The message-id schema",
            "description": "This is used to uniquely identify devices.",
            "default": "",
            "examples": [
                "test"
            ]
        },
        "message": {
            "$id": "#/properties/message",
            "type": "object",
            "title": "The message schema",
            "description": "An explanation about the purpose of this instance.",
            "default": {},
            "examples": [
                {
                    "exists": true
                }
            ],
            "required": [
                "exists"
            ],
            "properties": {
                "exists": {
                    "$id": "#/properties/message/properties/exists",
                    "type": "boolean",
                    "title": "The exists schema",
                    "description": "True if note-type is found else false",
                    "default": false,
                    "examples": [
                        true
                    ]
                }
            },
            "additionalProperties": true
        }
    },
    "additionalProperties": true
}
